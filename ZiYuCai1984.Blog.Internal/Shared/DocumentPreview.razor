<div>

    <div class="d-flex z-index-1">
        <span class="oi @(Document.IsLocked ? "oi-lock-locked" : "")" style="margin-right: 16px"></span>
        <a class="flex-grow-1 " href="@Link">@Document.Title</a>
        <span>
            @Document.CreateTime
        </span>
    </div>

    <p>
        @Document.Summary
    </p>

</div>


@code {
#nullable disable

    [Parameter]
    public Document Document { get; set; }


    public string Link => $"./document/{Document.Title}";
}